[core]
	excludesfile = ~/.gitignore
  editor = "vim"
[commit]
  verbose = true
[merge]
  tool = nfugitive
[mergetool "nfugitive"]
  cmd = nvim -f -c "Gdiff" "$MERGED"
[diff]
  tool = nvimdiff2
[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE
[init]
	templatedir = ~/.git_template
[alias]
	ctags = !.git/hooks/ctags

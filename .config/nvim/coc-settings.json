{
  "prettier.singleQuote": true,
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "json", "css", "python", "html", "clojure", "php", "latex", "bib"],
  "python.linting.enabled": true,
  "python.jediEnabled": true,
  "python.linting.mypyEnabled": true ,
  "python.linting.flake8Enabled": false,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "black",
  "python.venvPath": "~/.virtualenv",
  "html.format.enable": true,
  "latex.rootDirectory": ".",
  "latex.build.outputDirectory": "build",
  "latex.build.executable": "latexmk",
  "latex.build.args": [
    "-pdf",
    "-interaction=nonstopmode",
    "-synctex=1",
    "-output-directory=build"
  ],
  "latex.build.onSave": true,
  "latex.build.forwardSearchAfter": true,
  "latex.forwardSearch.executable": "evince-synctex",
  "latex.forwardSearch.args": ["-f", "%l", "%p", "\"code -g %f:%l\""],
  "coc.source.file.ignoreHidden": false,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "eslint.packageManager": "yarn",
  "java.errors.incompleteClasspath.severity": "ignore",
  "cSpellExt.enableDictionaries": ["german"],
  "cSpell.language": "en, de",
  "languageserver": {
      "clojure-lsp": {
        "command": "bash",
        "args": ["-c", "clojure-lsp"],
        "filetypes": ["clojure"],
        "rootPatterns": ["project.clj"],
        "additionalSchemes": ["jar", "zipfile"],
        "trace.server": "verbose",
        "initializationOptions": {
        }
      }
    }
}

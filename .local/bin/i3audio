#!/bin/bash
function usage {
cat << EOI
Usage:
 i3audio < hdmi | intern >

Optionen:
  intern    use internal audio interface
  hdmi      use audio interface of hdmi

EOI
}


if [[ "$1" == "hdmi" ]]
then
   pactl set-card-profile 0 output:hdmi-stereo+input:analog-stereo
else
   pactl set-card-profile 0 output:analog-stereo+input:analog-stereo
fi
